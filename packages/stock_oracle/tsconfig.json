{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "sourceMap": false,
        "strict": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules"
    ]
}
